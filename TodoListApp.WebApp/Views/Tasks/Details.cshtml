@model TodoListApp.WebApi.Models.TaskDto

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Pending")
    </div>
    <div>
        <strong>Deadline:</strong> @Model.Deadline.ToString("yyyy-MM-dd")
    </div>

    <hr />

    <h4>Comments</h4>
    @if (Model.Comments.Any())
    {
        <ul>
            @foreach (var comment in Model.Comments)
            {
                <li>
                    @comment.Text
                    <!-- Edit Comment Button -->
                    <a href="@Url.Action("Edit", "Comment", new { id = comment.Id })" class="btn btn-primary btn-sm">Edit</a>

                    <!-- Delete Comment Button -->
                    <form action="@Url.Action("Delete", "Comment", new { id = comment.Id })" method="post" class="d-inline">
                        <input type="hidden" name="taskId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this comment?');">
                            Delete
                        </button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet.</p>
    }

    <hr />

    <!-- Add Comment Form -->
    <h4>Add Comment</h4>
    <form asp-action="AddComment" method="post">
        <div class="form-group">
            <label for="commentText">Comment</label>
            <textarea class="form-control" id="commentText" name="commentText" rows="3"></textarea>
        </div>
        <input type="hidden" name="taskId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Add Comment</button>
    </form>

    <hr />

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger btn-m" onclick="return confirm('Are you sure you want to delete this todo list?');">
            Delete
        </button>
    </form>
    <a href="@Url.Action("Edit", "Tasks", new { id = Model.Id })" class="btn btn-secondary">Edit Task</a>
    <a href="@Url.Action("Index", "TodoList")" class="btn btn-info">Back to List</a>
</div>
