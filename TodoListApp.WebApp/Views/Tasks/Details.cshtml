@using TodoListApp.WebApi.Models


@model TaskDto

<h2>Task Details</h2>

<div class="card">
    <div class="card-header">
        @Model.Title
    </div>
    <div class="card-body">
        <p>@Model.Description</p>
        <p><strong>Tags:</strong> @string.Join(", ", Model.Tags.Select(t => t.Name))</p>
        <p><strong>Comments:</strong></p>
        <form asp-action="MarkCompleted" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="isCompleted" id="isCompleted" value="true" @(Model.IsCompleted ? "checked" : "") />
                <label class="form-check-label" for="isCompleted">Completed</label>
            </div>

            <button type="submit" class="btn btn-primary">Update Status</button>
        </form>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger btn-m" onclick="return confirm('Are you sure you want to delete this todo list?');">
                Delete
            </button>
        </form>
        <h5>@Model.Deadline</h5>
        <ul>
            @foreach (var comment in Model.Comments)
            {
                <li>@comment.Text</li>
            }
        </ul>
    </div>
    <a class="btn btn-warning" asp-controller="TodoList" asp-action="Index">Back to List</a>
</div>
